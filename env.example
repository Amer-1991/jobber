# OpenAI API Key (Optional - for fallback)
OPENAI_API_KEY=your_openai_api_key_here

# Local Llama AI Configuration
# Choose one of the following options:

# Option 1: Ollama (Recommended for easy setup)
# Install Ollama from https://ollama.ai and run: ollama pull llama2
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama2

# Option 2: llama-cpp-python
# Install: pip install llama-cpp-python
# Download model from: https://huggingface.co/TheBloke/Llama-2-7B-Chat-GGUF
LLAMA_MODEL_PATH=models/llama-2-7b-chat.gguf

# Option 3: Transformers (Hugging Face)
# Install: pip install transformers torch accelerate
# Requires Hugging Face access token for Llama models
LLAMA_MODEL_NAME=meta-llama/Llama-2-7b-chat-hf
HUGGINGFACE_TOKEN=your_huggingface_token_here

# LangSmith (optional, for tracing)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=jobber-bahar-automation

# Browser Automation Configuration
# Choose one of the following options:

# Option 1: API-based Browser (Recommended - Browserbase, etc.)
BROWSER_API_TOKEN=your_browser_api_token_here
BROWSER_API_BASE_URL=https://api.browserbase.com

# Option 2: Local Playwright (Fallback)
# No additional configuration needed for local Playwright

# Bahar Website Credentials
BAHAR_URL=https://bahr.sa
BAHAR_USERNAME=your_bahar_username_here
BAHAR_PASSWORD=your_bahar_password_here

# Project Settings
MIN_PROJECT_BUDGET=100
MAX_PROJECT_BUDGET=5000
PREFERRED_CATEGORIES=Web Development,Mobile Development,Data Analysis,AI/ML

# Automation Settings
MONITORING_INTERVAL_MINUTES=30
MAX_OFFERS_PER_DAY=10
AUTO_SUBMIT_OFFERS=false